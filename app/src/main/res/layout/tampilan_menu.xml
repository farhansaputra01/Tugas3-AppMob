<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivrumah_sakit"
            android:layout_width="431dp"
            android:layout_height="166dp"
            android:onClick="clickRS"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_rumah_sakit" />

        <ImageView
            android:id="@+id/ivkantor_polisi"
            android:layout_width="400dp"
            android:layout_height="166dp"
            android:onClick="clickPolisi"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_kantor_polisi" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/ivsuper_market"
            android:layout_width="431dp"
            android:layout_height="166dp"
            android:onClick="clickMarket"
            android:layout_weight="1"
            app:srcCompat="@drawable/market_icon" />

        <ImageView
            android:id="@+id/ivsekolah"
            android:layout_width="400dp"
            android:layout_height="166dp"
            android:onClick="clickSekolah"
            android:layout_weight="1"
            app:srcCompat="@drawable/university" />
    </TableRow>

</LinearLayout>